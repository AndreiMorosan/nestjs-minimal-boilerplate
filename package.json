{
  "name": "nest-backend-boilerplate",
  "version": "0.0.1",
  "description": "",
  "author": "Morosan Andrei",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build:prod": "nest build -p tsconfig.build.json && node scripts/preparePackageJson.cjs",
    "start:dev": "node --loader ts-node/esm src/main.ts",
    "watch:dev": "node --loader ts-node/esm --watch src/main.ts",
    "start:nest": "nest start ./src/main.ts",
    "start:prod": "node dist/main.js",
    "start:dev:bun": "bun run ./src/main.ts",
    "watch:bun": "bun run --watch ./src/main.ts",
    "build:bun": "bun build --external=class-validator --external=@nestjs/sequelize --external=@mikro-orm/core --external=@nestjs/mongoose --external=mock-aws-s3 --external=hbs --external=aws-sdk --external=nock --external=@nestjs/websockets/socket-module --external=class-transformer --external=@nestjs/microservices --define process.env.NODE_ENV:\"'production'\" --target=bun --minify ./dist/main.js --outdir=dist --format esm ./src/main.ts",
    "typeorm": "typeorm-ts-node-esm",
    "typeorm:run-migrations": "npm run typeorm migration:run -- -d ./ormconfig.ts",
    "migration:generate": "npm run typeorm -- -d ./ormconfig.ts migration:generate ./src/database/migrations/UserConfig",
    "migration:create": "npm run typeorm -- migration:create ./src/database/migrations/$npm_config_name",
    "new": "hygen new",
    "postinstall": "patch-package",
    "migration:revert": "npm run typeorm -- -d ./ormconfig.ts migration:revert",
    "schema:drop": "yarn run typeorm schema:drop",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:cov": "NODE_ENV=test jest --coverage",
    "test:debug": "NODE_ENV=test node --inspect-brk -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_ENV=test jest && NODE_OPTIONS=--experimental-vm-modules && jest --config jest.config.ts",
    "docs:dev": "vuepress dev -p 7070",
    "docs:build": "DEPLOY_ENV=gh-pages vuepress build",
    "docs:deploy": "yarn docs:build && gh-pages -d .vuepress/dist",
    "release": "release-it"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.735.0",
    "@aws-sdk/s3-request-presigner": "3.777.0",
    "@faker-js/faker": "9.6.0",
    "@neondatabase/serverless": "0.10.4",
    "@nestjs/common": "11.0.13",
    "@nestjs/config": "4.0.0",
    "@nestjs/core": "11.0.13",
    "@nestjs/cqrs": "11.0.0",
    "@nestjs/jwt": "11.0.0",
    "@nestjs/passport": "11.0.5",
    "@nestjs/platform-express": "11.0.13",
    "@nestjs/swagger": "11.1.1",
    "@nestjs/throttler": "6.4.0",
    "@nestjs/typeorm": "11.0.0",
    "@types/uuid": "10.0.0",
    "bcryptjs": "2.4.3",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "compression": "1.7.5",
    "esm": "3.2.25",
    "helmet": "8.0.0",
    "libphonenumber-js": "1.11.18",
    "lodash": "4.17.21",
    "mime-types": "2.1.35",
    "morgan": "1.10.0",
    "nestjs-cls": "5.4.2",
    "nodemon": "3.1.9",
    "parse-duration": "2.1.3",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "pg": "8.13.1",
    "reflect-metadata": "0.2.0",
    "rxjs": "7.8.1",
    "tslib": "2.8.1",
    "typeorm": "0.3.20",
    "typeorm-transactional": "0.5.0",
    "uuid": "11.0.5"
  },
  "devDependencies": {
    "@nestjs/cli": "10.4.9",
    "@nestjs/schematics": "10.0.0",
    "@nestjs/testing": "11.0.13",
    "@stylistic/eslint-plugin-ts": "4.2.0",
    "@swc/cli": "0.5.2",
    "@swc/core": "1.10.14",
    "@types/bcrypt": "5.0.2",
    "@types/bcryptjs": "2.4.6",
    "@types/compression": "1.7.5",
    "@types/express": "5.0.0",
    "@types/jest": "29.5.2",
    "@types/lodash": "4.17.14",
    "@types/mime-types": "2.1.4",
    "@types/morgan": "1.9.9",
    "@types/multer": "1.4.12",
    "@types/node": "20.3.1",
    "@types/passport": "1.0.17",
    "@types/passport-jwt": "4.0.1",
    "@types/supertest": "6.0.0",
    "@typescript-eslint/eslint-plugin": "8.0.0",
    "@typescript-eslint/parser": "8.0.0",
    "cpy-cli": "5.0.0",
    "eslint": "9.19.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.0",
    "jest": "29.5.0",
    "patch-package": "8.0.0",
    "prettier": "3.0.0",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "ts-jest": "29.1.0",
    "ts-loader": "9.4.3",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.1.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
